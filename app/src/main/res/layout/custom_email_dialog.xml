<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#c31d2637">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#FFFFFF">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="#4c508b">

            </RelativeLayout>

            <ImageView
                android:id="@+id/closeImg"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/close_2"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:layout_marginTop="1dp"
                android:layout_marginRight="5dp"/>


            <RelativeLayout
                android:id="@+id/edtTxtLyt"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <com.example.suleyman.project_a.FontEditText
                    android:id="@+id/emailEdt"
                    android:layout_width="match_parent"
                    android:text="nicatguliyev3@gmail.com"
                    android:singleLine="true"
                    android:inputType="textEmailAddress"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_HINT"
                    android:textColor="#1d2637"
                    android:textColorHint="#848484"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/progressLyt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="20dp"
                android:layout_below="@+id/edtTxtLyt">


                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:visibility="visible"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:id="@+id/doneImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_done"/>


              <ImageView
                android:id="@+id/errorImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:visibility="invisible"
                android:src="@drawable/ic_send_error"/>


                <com.example.suleyman.project_a.FontTextView
                    android:id="@+id/sendingInformationTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Göndərilir..."
                    android:textSize="20sp"
                    android:visibility="visible"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/progressBar"/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gonderBtn"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/progressLyt"
                android:clickable="true"
                android:visibility="visible"
                android:layout_marginBottom="20dp"
                android:background="@drawable/calculate_pressed"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp">

                <com.example.suleyman.project_a.FontTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GÖNDƏR"
                    android:textSize="18sp"
                    android:id="@+id/gonderTxt"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:padding="10dp"
                    android:textStyle="bold" />

            </RelativeLayout>

          <RelativeLayout
            android:id="@+id/okBtn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/progressLyt"
            android:layout_marginTop="20dp"
            android:clickable="true"
            android:visibility="gone"
            android:layout_marginBottom="20dp"
            android:background="@drawable/calculate_pressed"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="90dp">

            <com.example.suleyman.project_a.FontTextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="OK"
              android:textSize="18sp"
              android:textColor="#FFFFFF"
              android:layout_centerInParent="true"
              android:padding="10dp"
              android:textStyle="bold" />

          </RelativeLayout>



        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
