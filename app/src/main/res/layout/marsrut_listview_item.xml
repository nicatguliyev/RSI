<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="35dp">

    <TextView
        android:id="@+id/marsrutTxt"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:text="BoyukKesik - Elet"
        android:textColor="@color/bgcolor"
        android:layout_marginLeft="2dp"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#3d4570"/>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="#3d4570"/>

    <View
        android:id="@+id/centerView"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@+id/marsrutTxt"
        android:background="#3d4570"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#3d4570"/>

    <TextView
        android:id="@+id/valueTxt"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/centerView"
        android:layout_centerVertical="true"
        android:textColor="@color/bgcolor"
        android:layout_marginLeft="2dp"
        android:text="22.048,00 / 66%" />
</RelativeLayout>