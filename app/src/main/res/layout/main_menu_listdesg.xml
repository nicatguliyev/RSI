<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:foo="http://schemas.android.com/apk/res/com.example.suleyman.project_a"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lbl_daily"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="Günlük"
        android:textColor="@color/bgcolor"
        foo:customFont="fonts/Cera PRO.ttf" />

    <TextView
        android:id="@+id/txt_2016"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/lbl_2016"
        android:layout_alignBottom="@+id/lbl_2016"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="@color/bgcolor"
        foo:customFont="fonts/Cera PRO.ttf" />

    <TextView
        foo:customFont="fonts/Cera PRO.ttf"
        android:id="@+id/lbl_2016"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="2016"
        android:textColor="@color/bgcolor"
        android:layout_below="@+id/lbl_daily"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lbl_2017"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="2017"
        android:textColor="@color/bgcolor"
        foo:customFont="fonts/Cera PRO.ttf"
        android:layout_below="@+id/lbl_2016"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/lbl_2016_prw"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="2016-İyun"
        android:textColor="@color/bgcolor"
        foo:customFont="fonts/Cera PRO.ttf"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/lbl_2017" />

    <TextView
        android:id="@+id/txt_2017"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/lbl_2017"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="@color/bgcolor"
        foo:customFont="fonts/Cera PRO.ttf" />

    <TextView
        android:id="@+id/txt_2016_prw"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="@color/bgcolor"
        foo:customFont="fonts/Cera PRO.ttf"
        android:layout_alignBaseline="@+id/lbl_2016_prw"
        android:layout_alignBottom="@+id/lbl_2016_prw"
        android:layout_alignLeft="@+id/txt_2017"
        android:layout_alignStart="@+id/txt_2017" />

    <TextView
        foo:customFont="fonts/Cera PRO.ttf"
        android:id="@+id/txt_daily"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="@color/bgcolor"
        android:layout_alignBaseline="@+id/lbl_daily"
        android:layout_alignBottom="@+id/lbl_daily"
        android:layout_alignLeft="@+id/txt_2016"
        android:layout_alignStart="@+id/txt_2016" />
</RelativeLayout>