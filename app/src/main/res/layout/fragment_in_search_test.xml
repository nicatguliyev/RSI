<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:foo="http://schemas.android.com/apk/res/com.example.suleyman.project_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rootLyt"
    tools:context="com.example.suleyman.project_a.InSearch">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1D2636">

        <LinearLayout
            android:id="@+id/firstLyt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.example.suleyman.project_a.EditTextPlus
                android:id="@+id/txt_qnqcode"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:background="@drawable/orange_btn"
                android:drawableRight="@drawable/search"
                android:hint="YHN Kod"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textColor="@color/bgcolor"
                android:textColorHint="#fed290" />

            <Spinner
                android:id="@+id/cmb_actype"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:background="@drawable/orange_btn_arrow"
                android:paddingRight="10dp"
                android:text="REJİM"
                android:textAlignment="center"
                android:textColor="@color/bgcolor" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLyt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_below="@+id/firstLyt"
            android:weightSum="2">


            <com.example.suleyman.project_a.EditTextPlus
                android:id="@+id/txt_m1"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:background="@drawable/orange_btn"
                android:drawableRight="@drawable/search"
                android:hint="Marsrut1"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textColor="@color/bgcolor"
                android:textColorHint="#fed290" />


            <com.example.suleyman.project_a.EditTextPlus
                android:id="@+id/txt_m2"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="13dp"
                android:layout_weight="1"
                android:background="@drawable/orange_btn"
                android:drawableRight="@drawable/search"
                android:hint="Marsrut2"
                android:paddingRight="10dp"
                android:textAlignment="center"
                android:textColor="@color/bgcolor"
                android:textColorHint="#fed290" />



        </LinearLayout>

        <LinearLayout
            android:id="@+id/thirdLinearLyt"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_below="@+id/secondLyt"
            android:weightSum="2">


            <com.example.suleyman.project_a.ButtonPlus
                android:id="@+id/btn_preprice"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginTop="13dp"
                android:background="@drawable/blue_btn"
                android:drawableRight="@drawable/search"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:paddingRight="10dp"
                android:text="Əvvəlki qiymət"
                android:textColor="@color/bgcolor" />


            <com.example.suleyman.project_a.ButtonPlus
                android:id="@+id/btn_addfilter"
                android:layout_marginEnd="17dp"
                android:layout_marginRight="17dp"
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="30dp"
                android:background="@drawable/blue_btn"
                android:drawableRight="@drawable/search"
                android:layout_marginLeft="21dp"
                android:layout_marginStart="21dp"
                android:paddingRight="10dp"
                android:text="Əlavə filter"
                android:textColor="@color/bgcolor" />


        </LinearLayout>

        <com.example.suleyman.project_a.ButtonPlus
            android:id="@+id/btn_result"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:layout_below="@+id/thirdLinearLyt"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/green_btn"
            android:drawableRight="@drawable/ok"
            android:paddingRight="10dp"
            android:text="NƏTİCƏ"
            android:textColor="@color/bgcolor" />


        <LinearLayout
            android:id="@+id/tabLyt"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="4"
            android:layout_marginTop="10dp"
            android:layout_below="@id/btn_result"
            android:background ="#3d4c68"
            android:orientation="horizontal">

            <TextView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "1 Tonun Qiymeti"
                android:textColor = "#ffffff" />

            <TextView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "Cəmi Alış"
                android:textColor = "#ffffff" />

            <TextView
                android:layout_width = "0dp"
                android:layout_height = "match_parent"
                android:layout_weight = "1"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "Cəmi Satış"
                android:textColor = "#ffffff" />

            <TextView
                android:layout_width = "0dp"
                android:layout_height = "wrap_content"
                android:layout_weight = "1"
                android:gravity = "center"
                android:padding = "5dp"
                android:text = "Cəmi Tonnaj"
                android:textColor = "#ffffff" />

        </LinearLayout>

        <ProgressBar
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/searchPrg"
            android:layout_below="@+id/tabLyt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:visibility="invisible"/>

        <ListView
            android:id="@+id/listview"
            android:layout_width = "match_parent"
            android:layout_height = "wrap_content"
            android:divider = "@null"
            android:layout_above="@+id/resultLyt"
            android:layout_below="@+id/tabLyt"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <RelativeLayout
            android:id="@+id/resultLyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:background="#1b4011"
            android:layout_alignParentBottom="true">

            <TextView
                android:id="@+id/resultTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Butun kriteriyalar uzre en serfeli qiymet 11.09-dur"
                android:layout_centerInParent="true"/>
        </RelativeLayout>


    </RelativeLayout>


</FrameLayout>
