<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

  <RelativeLayout
    android:id="@+id/rel1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


  <LinearLayout
    android:id="@+id/lin1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="2"
    android:orientation="horizontal">

    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

     <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Daşıma növü"
       android:layout_marginTop="20dp"
       android:textColor="#000000"
       android:gravity="center" />

      <Spinner
        android:background="@drawable/orange_btn_arrow"
        android:id="@+id/cmb_dasimaType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:drawableRight="@drawable/search"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/bgcolor"
        android:textColorHint="#fed290" />


      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rüb"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:gravity="center" />

      <Spinner
        android:background="@drawable/orange_btn_arrow"
        android:id="@+id/cmb_rubType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:drawableRight="@drawable/search"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/bgcolor"
        android:textColorHint="#fed290" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mənsubiyyət"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:gravity="center" />

      <Spinner
        android:background="@drawable/orange_btn_arrow"
        android:id="@+id/cmb_ownerType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:drawableRight="@drawable/search"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/bgcolor"
        android:textColorHint="#fed290" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qiymət tipi"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:gravity="center" />

      <Spinner
        android:background="@drawable/orange_btn_arrow"
        android:id="@+id/cmb_selBuyType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:drawableRight="@drawable/search"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/bgcolor"
        android:textColorHint="#fed290" />

      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="number"
        android:id="@+id/weight1Edt"
        android:singleLine="true"
        android:imeOptions="actionNext"
        android:hint="Kütlə(min)"/>

        <CheckBox
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:text="2016"
          android:id="@+id/yearCheck"
          android:layout_marginLeft="10dp"
          android:textColor="#000000"/>

    </LinearLayout>


    <LinearLayout
      android:layout_width="0dp"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:orientation="vertical">

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Yükləmə növü"
        android:layout_marginTop="20dp"
        android:textColor="#000000"
        android:gravity="center" />

      <Spinner
        android:background="@drawable/orange_btn_arrow"
        android:id="@+id/cmb_yukType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:drawableRight="@drawable/search"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/bgcolor"
        android:textColorHint="#fed290" />


      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daşıma vasitəsi"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:gravity="center" />

      <Spinner
        android:background="@drawable/orange_btn_arrow"
        android:id="@+id/cmb_vgType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:drawableRight="@drawable/search"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/bgcolor"
        android:textColorHint="#fed290" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mənşəyi"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:gravity="center" />

      <Spinner
        android:background="@drawable/orange_btn_arrow"
        android:id="@+id/cmb_originType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:drawableRight="@drawable/search"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/bgcolor"
        android:textColorHint="#fed290" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Axtarış tipi"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:gravity="center" />

      <Spinner
        android:background="@drawable/orange_btn_arrow"
        android:id="@+id/cmb_searchType"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:drawableRight="@drawable/search"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:textColor="@color/bgcolor"
        android:textColorHint="#fed290" />

      <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:inputType="number"
        android:id="@+id/weight2Edt"
        android:layout_marginRight="10dp"
        android:imeOptions="actionDone"
        android:hint="Kütlə(max)"/>

    </LinearLayout>


  </LinearLayout>

  </RelativeLayout>

  <Button
    android:id="@+id/btn_ok"
    android:layout_width="150dp"
    android:layout_height="30dp"
    android:background="@drawable/green_btn"
    android:drawableRight="@drawable/ok"
    android:paddingRight="10dp"
    android:text="NƏTİCƏ"
    android:textColor="@color/bgcolor"
    android:layout_below="@id/rel1"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"/>

</RelativeLayout>
